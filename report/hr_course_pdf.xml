<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
            id="hr_candidato.cursos_report"
            model="hr.curso.report"
            string="Anexo-DS4 Candidates list for Course"
            report_type="qweb-pdf"
            name="hr_candidato.cursos_doc_view"
            file= "hr_candidato.cursos_doc_view"
            attachment_use="False"
            menu="False"
        />
        <template id="cursos_doc_view">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
             <div class="page">

                 <h2>Candidates list for Course</h2>
                 <table class="table table table-striped">
                    <thead>
                        <th class="text-center bg-danger" style="width: 25%">Name</th>
                        <th class="text-center bg-danger" style="width: 25%">Job Position</th>
                         <th class="text-center bg-danger" style="width: 10%">CI</th>
                        <th class="text-center bg-danger" style="width: 10%">Address</th>
                        <th class="text-center bg-danger" style="width: 20%">Formal Grade That You Possess</th>
                        <th class="text-center bg-danger" style="width: 20%">Course</th>
                    </thead>
                     <tbody>
                         <t  t-foreach="candidato1" t-as="doc">
                            <tr>
                                <td class="text-center text-info"><span t-esc="doc['name']"/></td>
                                <td class="text-center text-info"><span t-esc="doc['job_id']"/></td>
                                <td class="text-center text-info"><span t-esc="doc['ci']"/></td>
                                <td class="text-center text-info"><span t-esc="doc['address']"/></td>
                                <td class="text-center text-info"><span t-esc="doc['grade_possesses']"/></td>
                                <td class="text-center text-info"><span t-esc="doc['course_id']"/></td>
                            </tr>
                        </t>
                    </tbody>
                 </table>
             </div>
            </t>
        </t>
        </template>
</odoo>