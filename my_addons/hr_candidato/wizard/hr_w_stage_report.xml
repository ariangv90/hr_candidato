<odoo>

        <record id="view_hr_etapas_report_form" model="ir.ui.view">
            <field name="name">hr.etapas.report</field>
            <field name="model">hr.etapas.report</field>
            <field name="arch" type="xml">
            <form string="Candidates' list in stages">
                <group col="4" colspan="6">
                    <field name="etapas_id"/>

                </group>
                <footer>
                    <button name="action_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
            </field>
        </record>
    <record id="action_hr_etapas_report" model="ir.actions.act_window">
            <field name="name">Candidates' list in stages</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.etapas.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_hr_etapas_report_form" />

        </record>
</odoo>