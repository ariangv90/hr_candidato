<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="evalua_list">
      <field name="name">Model the student is record of integral evaluation</field>
      <field name="model">model.evalua</field>
      <field name="arch" type="xml">
        <tree>
          <field name="applicant_id"/>
          <field name="course_id"/>
          <field name="final_evaluation"/>
          <field name="quality" optional="hide"/>
        </tree>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="evalua_action_window">
      <field name="name">Model the student is record of integral evaluation</field>
      <field name="res_model">model.evalua</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>